<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="50dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/zona1_btn0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0">
            </ImageButton>
            <ImageButton
                android:id="@+id/zona1_btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:layout_column="1">
            </ImageButton>
            <ImageButton
                android:id="@+id/zona1_btn2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2">
            </ImageButton>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/zona1_btn3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0">
            </ImageButton>
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:visibility="invisible"
                android:layout_column="1">
            </ImageButton>
            <ImageButton
                android:id="@+id/zona1_btn4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2">
            </ImageButton>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/zona1_btn5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0">
            </ImageButton>
            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:visibility="invisible"
                android:layout_column="1">
            </ImageButton>
            <ImageButton
                android:id="@+id/zona1_btn6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2">
            </ImageButton>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/zona1_btn7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="0">
            </ImageButton>
            <ImageButton
                android:id="@+id/zona1_btn8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginHorizontal="10dp"
                android:layout_column="1">
            </ImageButton>
            <ImageButton
                android:id="@+id/zona1_btn9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_column="2">
            </ImageButton>

        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/botonJuegoReiniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reiniciar"></Button>
            <Button
                android:id="@+id/botonJuegoSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salir"></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/texto_puntuacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:layout_gravity="center">
            </TextView>

        </LinearLayout>

    </TableLayout>

</LinearLayout>