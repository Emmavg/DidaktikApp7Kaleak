<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Zona1_1">


    <TextView
        android:id="@+id/txtZona1_1_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/txtZona1_Titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="573dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imgZona1_1_Foto1"
                    android:layout_width="173dp"
                    android:layout_height="114dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scrollerZona1_1_Narrador_1"
                    app:srcCompat="@drawable/zona1_foto_1" />

                <ImageView
                    android:id="@+id/imgZona1_1_Foto2"
                    android:layout_width="169dp"
                    android:layout_height="114dp"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imgZona1_1_Foto1"
                    app:layout_constraintTop_toBottomOf="@+id/scrollerZona1_1_Narrador_1"
                    app:srcCompat="@drawable/zona1_foto_2" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollerZona1_1_Narrador_1"
                android:layout_width="342dp"
                android:layout_height="96dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtZona1_1_Titulo">

                <TextView
                    android:id="@+id/txtZona1_1_Narrador_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="bottom"
                    android:maxLines="5"
                    android:scrollbars="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtZona1_1_Titulo">

                    <requestFocus />
                </TextView>
            </ScrollView>

            <ImageView
                android:id="@+id/imgZona1_1_Foto3"
                android:layout_width="179dp"
                android:layout_height="90dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/scrollerZona1_1_Narrador_2"
                app:srcCompat="@drawable/zona1_foto_3" />

            <ScrollView
                android:id="@+id/scrollerZona1_1_Narrador_2"
                android:layout_width="345dp"
                android:layout_height="184dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgZona1_1_Foto1">

                <TextView
                    android:id="@+id/txtZona1_1_Narrador_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:gravity="bottom"

                    android:scrollbars="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtZona1_1_Titulo">

                    <requestFocus />
                </TextView>
            </ScrollView>

            <ImageView
                android:id="@+id/imgZona1_1_Foto4"
                android:layout_width="166dp"
                android:layout_height="90dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:visibility="invisible"
                app:layout_constraintStart_toEndOf="@+id/imgZona1_1_Foto3"
                app:layout_constraintTop_toBottomOf="@+id/scrollerZona1_1_Narrador_2"
                app:srcCompat="@drawable/zona1_foto_4" />
            <Button
                android:id="@+id/btnZona1_1_Siguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:text="Siguiente"
                android:layout_gravity="right"/>
        </LinearLayout>

    </ScrollView>







</LinearLayout>